{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "app",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules"],
  "include": ["app/**/*"]
}
